{
  "openapi": "3.0.1",
  "info": {
    "title": "HotelBookingApp",
    "version": "1.0"
  },
  "paths": {
    "/api/Booking/{id}": {
      "get": {
        "tags": [
          "Booking"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Booking": {
      "post": {
        "tags": [
          "Booking"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBookingDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBookingDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBookingDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Hotel/{name}": {
      "get": {
        "tags": [
          "Hotel"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Hotel": {
      "post": {
        "tags": [
          "Hotel"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateHotelDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateHotelDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateHotelDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Room/{NumberOfGuests}/{CheckInDate}/{CheckOutDate}": {
      "get": {
        "tags": [
          "Room"
        ],
        "parameters": [
          {
            "name": "NumberOfGuests",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "CheckInDate",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "CheckOutDate",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateBookingDto": {
        "required": [
          "hotel",
          "nameOnBooking"
        ],
        "type": "object",
        "properties": {
          "hotel": {
            "type": "string",
            "nullable": true
          },
          "roomId": {
            "type": "string",
            "format": "uuid"
          },
          "checkInDate": {
            "type": "string",
            "format": "date"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date"
          },
          "numberOfGuests": {
            "type": "integer",
            "format": "int32"
          },
          "nameOnBooking": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateHotelDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "numberOfSingleRooms": {
            "type": "integer",
            "format": "int32"
          },
          "numberOfDoubleRooms": {
            "type": "integer",
            "format": "int32"
          },
          "numberOfDeluxRooms": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}